{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    // "lib": ["dom", "es6"],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@modules": ["./src/modules/*"],
      "@routes": ["./src/routes/*"],
      "@interfaces": ["./src/interfaces/*"],
      "@utils": ["./src/utils/*"],
      "@controllers": ["./src/controllers/*"],
      "@src": ["./src/*"]        
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ],
  "files": [
    "src/app.ts"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
}
}